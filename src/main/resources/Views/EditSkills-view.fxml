<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pizzatimepack.EditSkillsSceneController"
      spacing="10" alignment="TOP_CENTER">
    <Label text="Редагування навичок" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <ScrollPane fitToWidth="true" prefHeight="200">
        <VBox fx:id="skillsBox" spacing="5" />
    </ScrollPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Зберегти" fx:id="saveButton"/>
        <Button text="Скасувати" fx:id="cancelButton"/>
    </HBox>
</VBox>
