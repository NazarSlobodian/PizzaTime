<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.Stage?>

<VBox xmlns:fx="http://javafx.com/javafx/8.0.171" spacing="10" style="-fx-padding: 10;">
    <!-- Заголовок -->
    <Label text="Додати нову позицію" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-background-color: #a67c52; -fx-text-fill: white; -fx-padding: 5;" alignment="CENTER">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </Label>

    <!-- Поля вводу -->
    <GridPane hgap="10" vgap="10">
        <Label text="Назва:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Інгредієнти:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="ingredientsArea" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Час приготування:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="timeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Фото:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button text="Завантажити" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Кнопка підтвердження
    <Button text="OK" onAction="
        System.out.println(
            'Назва: ' + nameField.getText() + '\n' +
            'Інгредієнти: ' + ingredientsArea.getText() + '\n' +
            'Час приготування: ' + timeField.getText()
        );
        ((Stage)((Button)event.getSource()).getScene().getWindow()).close();
    " style="-fx-font-size: 14;"/>-->
</VBox>
